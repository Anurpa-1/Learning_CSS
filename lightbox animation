//css code for lightbox animation styling and transition
#lightbox{
	height: 0;
	width: 0;
	position: fixed;
	top: 0;
	left: 0;
	overflow: hidden;
	transition: all 2s ease-in-out;
}
#lightbox:target{
	/*this is a pseudo class like the active visited etc.*/
	height: 30%;
	width: 30%;
	top: 25%;
	left: 25%;
	background-color: lightgrey;
}
